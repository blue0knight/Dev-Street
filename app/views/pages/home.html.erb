<hr class="style17">

<div class="row">

  <% if user_signed_in? %>
    <div class="col-md-6 col-sm-12">
      <div class="well">
        <h2 class="text-center">Your Profile</h2>
        <% if current_user.profile %>
          <%= link_to "Edit your profile", edit_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
          <%= link_to "View your profile", user_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
        <% else %>
          <p>Create your profile so that you can share your information with the community.</p>
          <%= link_to "Create your profile", new_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block'%>
        <% end %>
      </div>
    </div>
    <div class="col-md-6 col-sm-12">
      <div class="well">
        <h2 class="text-center">The Community</h2>
        <p>Visit the community to meet other developers, entrepreneurs, and investors!</p>
        <br>
        <%= link_to "Visit the community", users_path, class: 'btn btn-default btn-lg btn-block' %>
      </div>
    </div>
  <% else %>

  <div class="col-sm-12 col-md-6">
    <div class="well">
      <div class="caption">
        <h2 class="text-center">Basic Plan</h2>
        <h2 class="text-center text-primary"> $0 per month</h2>
        <h4><span class="glyphicon glyphicon-ok text-success" aria-hidden="true"></span>
           &nbsp;Basic access to Dev Street</h4>
        <h4><span class="glyphicon glyphicon-remove text-danger" aria-hidden="true"></span>
          &nbsp;Access to member information</h4>
        <h4><span class="glyphicon glyphicon-remove text-danger" aria-hidden="true"></span>
          &nbsp;Send private messages to other community members</h4>
        <p>...</p>
        <%= link_to "Start your Basic Membership",
                              new_user_registration_path(plan: @basic_plan.id),
                              class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    </div>
  </div>
  <div class="col-sm-12 col-md-6">
    <div class="well">
      <div class="caption">
        <h2 class="text-center">Pro Membership</h2>
        <h2 class="text-center text-primary"> $10 per month</h2>
        <h4><span class="glyphicon glyphicon-ok text-success" aria-hidden="true"></span>
          &nbsp;Basic access to Dev Street</h4>
        <h4><span class="glyphicon glyphicon-ok text-success" aria-hidden="true"></span>
          &nbsp;Access to member information</h4>
        <h4><span class="glyphicon glyphicon-ok text-success" aria-hidden="true"></span>
          &nbsp;Send private messages to other community members</h4>
        <p>...</p>
        <%= link_to "Start your Pro Membership",
                                new_user_registration_path(plan: @pro_plan.id),
                                class: 'btn btn-success btn-lg btn-block' %>
      </div>
    </div>
  </div>

  <% end %>

