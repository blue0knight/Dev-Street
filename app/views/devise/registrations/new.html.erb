<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">

    <% if params[:plan] == '1' %>
      <h1>Basic Account</h1>
      <p>Sign up for FREE account to get basic access to the community.</p>
    <% else %>
      <h1>Pro Account</h1>
      <p>Sign up for $10/month for Pro account to get full access <br>
        to the community all the resources.</p>
    <% end %>
  </div>

  <div class="col-md-4 col-md-offset-4">
    <div class="well">

      <h2>Sign up</h2>

      <% if params[:plan] == '1' %>
        <%= render "basic_form" %>
      <% else %>
        <%= render "pro_form" %>
      <% end %>

        <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
